{
    "env": {
        "browser": true,
        "es2021": true,
				"jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
		"parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
				"import/extensions": "off",
				"import/no-unresolved": 0,
				"no-use-before-define": "off",
				"react/jsx-filename-extension": 0,
				"react/jsx-props-no-spreading": 0,
				"react/prop-types": 0
    },
		"settings": {
				"import/resolver": {
					"node": {
						"extensions": [".tsx", ".ts"]
					}
				}
  }
}
